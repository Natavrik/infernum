#include <string>
#include <iostream>
#include <Windows.h>
#define NULL '\0'
using namespace std;
class student {
    private:
        int     number;
        string  name;
        int     age;
    public:
        void SetNumber(int number) {this->number = number;}
        void SetName(string name) {	this->name = name;}
        void SetAge(int age) {this->age = age;}
        student(int number, string name, int age)
        {
            this->number = number;
            this->name = name;
            this->age = age;
        }
        student() { this->number = 0; this->name = NULL; this->age = 0;}
        void show ()
        {
            cout.width(4); cout<<left<<"ID:"<<number<<"\t";
            cout.width(6); cout<<left<<"NAME: "<<name<<"\t";
            cout.width(6); cout<<left<<"AGE: "<<age<< "\n";
        }

        int GetNumber() { return number; }
        string GetName() { return name; }
        int GetAge() { return age; }
};

template <class T>class mass
{
    private:
        T s1;
        mass* next;
    public:
        mass(T s, mass* d) { next = d; s1 = s; }
        T getT() { return s1; }
        mass* getmass() { return next; }
};

template <class T>void spisok(T* s, int n)
{
	mass<T>* start = NULL;
	for (int i = 0; i < n; i++) { start = new mass<T>(s[i], start);	}
	mass<T>* next = start;
	while (next != NULL) {
		next->getT().show();
		next = next->getmass();
	}
}

void clear ();
void clear () {cout<<"\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n";}

int main() {
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	student students[] = {
		student(1, "Иванов Иван", 31),
		student(2, "Сидорова Юля", 43),
		student(3, "Петрова Павла", 56),
		student(4, "Романович Роман", 23),
		student(5, "Комиссаров Вадим", 78),
		student(6, "Щепкин Игорь", 33)
			      };
	int n = sizeof(students) / sizeof(student); /// длина
	spisok(students, n);
    int index;
    cout << "\n\nВведите ID удаляемого пользователя: ";
    cin >> index;
    cout << endl;
    index--;
    for(int i = index; i < n-1;++i)
    students[i] = students[i+1];
    n--;
    clear();
    cout << "Данные, после удаления пользователя:\n\n";
    for(int i = 0; i < n; ++i)
    students[i].show();
    clear();
	system("pause");
	return 0;
}
